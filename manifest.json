{
 "manifest_version": 2,
 "name": "PhishingDetector",
 "version": "1.0.0",
 "description": "Extension to help users detect phishing websites",
 "short_name": "Phishing Detector",
 "permissions": ["activeTab", "declarativeContent", "storage", "<all_urls>"],
 "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "all_frames": true,
     "run_at": "document_end",
     "css": ["content.css"],
     "js": ["content.js"]
   }
 ],
 "browser_action": {
   "default_title": "Does a thing when you do a thing",
   "default_popup": "popup.html",
   "default_icon": {
     "32": "icons/fish.png"
   }
 }
}